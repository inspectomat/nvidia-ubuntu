FROM ubuntu:24.10

# Install essential packages
RUN apt-get update && apt-get install -y \
    sudo \
    lsb-release \
    pciutils \
    curl \
    software-properties-common \
    gnupg \
    nvidia-cuda-toolkit \
    && rm -rf /var/lib/apt/lists/*

# Install Ollama
RUN curl https://ollama.ai/install.sh | sh

# Copy test files
COPY driver.sh /app/driver.sh
COPY tests/test_driver.sh /app/test_driver.sh
COPY tests/test_ollama.sh /app/test_ollama.sh
COPY run-ollama.sh /app/run-ollama.sh

# Make scripts executable
RUN chmod +x /app/driver.sh /app/test_driver.sh /app/test_ollama.sh /app/run-ollama.sh

WORKDIR /app

# Set environment variables for GPU support
ENV NVIDIA_VISIBLE_DEVICES=all
ENV NVIDIA_DRIVER_CAPABILITIES=compute,utility

# Set entrypoint to test script
ENTRYPOINT ["/app/test_driver.sh"]
